<div class="container">
  <div class="row py-4">
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong>: <%= @order.created_at.to_date %></li>
        <li><strong>Artist</strong>: <%= @order.booking.artist.name %></li>
        <li><strong>TOTAL</strong>: <%= humanized_money_with_symbol @order.price_cents %></li>
        </li>
      </ul>
      <%= link_to 'See my bookings', bookings_path %>
    </div>
  </div>
</div>
