<div class="container">
<h1>Your bookings:</h1>
  <% @bookings.each do |booking| %>
      <h3>Booking <em>(ref: #<%= booking.id %>)</em></h3>
    <img src='<%= cl_image_path booking.artist.photos%>' />
    <div class="confirmation_card-infos">
        <% title_formatted = booking.artist.name.capitalize %>
        <% start_time = DateTime.parse(booking.start_date.to_s) %>
        <% end_time = DateTime.parse(booking.end_date.to_s) %>
        <% booking_duration = end_time - start_time %>
        <h2><%= title_formatted %></h2>
        <h3><%= booking.artist.location.capitalize %></h3>
        <p><%= start_time.strftime('%d %m %Y').split.join('/') %> Â· <%= end_time.strftime('%d %m %Y').split.join('/') %></p>
    </div>
  </div>
  <%  %>
  <%= link_to 'Leave a review', new_artist_review_path(booking.artist_id), class: 'mb-4 red-button' %>
  <% end %>
</div>
