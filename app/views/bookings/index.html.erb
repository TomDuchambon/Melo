<div class="container">
<h1>Your bookings:</h1>
  <% @bookings.each do |booking| %>
    <div class="booking-card">
      <h3 class='title'>Booking <em>(ref: #<%= booking.id %>)</em></h3>
      <div class="infos">
        <img src='<%= cl_image_path booking.artist.photos[0].key %>' />
          <% title_formatted = booking.artist.name.capitalize %>
          <% start_time = DateTime.parse(booking.start_date.to_s) %>
          <% end_time = DateTime.parse(booking.end_date.to_s) %>
          <% booking_duration = end_time - start_time %>
          <div class="meta">
            <h2 class='artist'>You've booked: <em class='red-text'><%= title_formatted %></em></h2>
            <h3 class='location'>Location:<%= booking.location.capitalize %></h3>
            <h4 class='type'>Event type: <%= booking.event_type.capitalize %></h4>
            <p class='duration'><%= start_time.strftime('%d %m %Y').split.join('/') %> -- <%= end_time.strftime('%d %m %Y').split.join('/') %></p>
            <%= link_to 'Leave a review', new_artist_review_path(booking.artist_id), class: 'mb-4 red-button', style: 'color: $gray !important' %>
          </div>
        </div>
    </div>
    <div class='form-seperator mt-3'></div>
  <% end %>
</div>
