
<div class="container">
<div class= background-lines>
        <div class='vl-center'></div>
        <div class='vl-r1'></div>
        <div class='vl-r2'></div>
        <div class='vl-r3'></div>
        <div class='vl-r4'></div>
        <div class='vl-r5'></div>
        <div class='vl-r6'></div>
        <div class='vl-l1'></div>
        <div class='vl-l2'></div>
        <div class='vl-l3'></div>
        <div class='vl-l4'></div>
        <div class='vl-l5'></div>
        <div class='vl-l6'></div>
      </div>
  <h2 style='font-family: "DIN bold", sans-serif'>Your <em class='red-text'>saved</em> artists:</h2>
  <div class="like-card-container">
  <% @likes.each do |like| %>
    <div class="like-card">
      <% artist = like.artist %>
      <a href='artists/<%= like.artist.id %>'class='name'><%= artist.name %></a>
      <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, user_like_path(like), class: 'btn btn-primary remove', data: {turbo_method: :delete} %>
    </div>
  <% end %>
  </div>
</div>
