<div class="container dm_room">
  <div class="messages">
    <% @dm_room.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user.first_name %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>

 <%= simple_form_for [@dm_room, @message] do |f| %>

<%= f.input :content,
    label: false,
    placeholder: "Message"
  %>
<%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>

</div>
